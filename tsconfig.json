{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "jsx": "react",
    "module": "ES2022",
    "resolveJsonModule": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node", "svelte"],
    "moduleResolution": "Node"
  },
  "include": [
    "./src/**/*.*"
  ]
}
